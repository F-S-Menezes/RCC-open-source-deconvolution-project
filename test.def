Bootstrap: docker
From:nvidia/cuda:11.5.1-devel-ubuntu20.04

%files
    /pvol/Miniconda3-py39_4.10.3-Linux-x86_64.sh maybe.sh

%post
    /bin/bash maybe.sh -f -b -p /opt/conda && \
    rm maybe.sh && \
    /opt/conda/bin/conda install --yes conda && \
    ln -s /opt/conda/bin/conda /usr/bin/conda && \
    conda clean --yes --all && \
    rm -rf /var/cache/apk/*
